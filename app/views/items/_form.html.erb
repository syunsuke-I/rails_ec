<style>
  .label-box__inner{
   padding: 10px 20px 10px 20px;
  .input-default{
    display: none;
    width: 100%;
    height: 40px;
    margin: auto;
    padding: 10px 16px 8px;
    border-radius:4px;
    background: #fff;
    line-height: 1.5;
    cursor: pointer;
    outline-width: 2px;
   }
  }
  label {
    padding: 0px 43px 15px 45px;
    color: #ffffff;
    background-color: #00CC99;
    cursor: pointer;
    border-radius: 10px;
  }

  input[type="file"] {
    display: none;
  }
  .img_name{
  min-width :200px;
  max-width :250px;
  }

  .overflow-wrap.break-word {
  overflow-wrap: break-word;
  }
</style>
<% if @item.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form.text_field :name, :placeholder => "商品名"%><br>
<%= form.number_field :price, :placeholder => "商品価格"%><br>
<%= form.number_field :stock, :placeholder => "在庫数"%><br>
<%= form.text_area :description, :placeholder => "商品説明"%><br>
<div class="d-inline-flex p-2">
  <label>
    <%= form.file_field :image, :placeholder => "商品画像" %><br>
    ファイルを選択
  </label>
  <p class="ms-2 mt-3 img_name" id="img_name"><%= @img_full_name %></p>
</div>
<%= form.submit id: 'submit' %><br>
<script>
  // input要素を取得
  var input = document.getElementById('item_image');
  // input要素に変更イベントリスナーを追加
  input.addEventListener('change', function() {
      // 変更されたinput要素からファイルを取得
      var file = input.files[0];
      // p要素を取得してファイル名を設定
      var p = document.querySelector('p');
      p.textContent = file.name;
  });
</script>
